{
  "mcpServers": {
    "github": {
      "command": "node",
      "args": ["./tools/mcp/github/index.mjs"],
      "env": {
        "GITHUB_TOKEN": "${env.GITHUB_TOKEN}",
        "GITHUB_REPOSITORY": "christianbernecker/live-your-dreams" 
      }
    },
    "neon": {
      "command": "node",
      "args": ["./tools/mcp/neon/index.mjs"],
      "env": {
        "NEON_API_KEY": "${env.NEON_API_KEY}",
        "NEON_PROJECT_ID": "${env.NEON_PROJECT_ID}",
        "NEON_DATABASE_NAME": "${env.NEON_DATABASE_NAME}",
        "NEON_DEFAULT_ROLE": "${env.NEON_DEFAULT_ROLE}",
        "NEON_DEFAULT_USER": "${env.NEON_DEFAULT_USER}",
        "NEON_DEFAULT_PASSWORD": "${env.NEON_DEFAULT_PASSWORD}"
      }
    },
    "ds-linter": {
      "command": "node", 
      "args": ["./tools/mcp/ds-linter/index.mjs"]
    },
    "docs": {
      "command": "node",
      "args": ["./tools/mcp/docs/index.mjs"]
    },
    "chrome-devtools": {
      "command": "npx",
      "args": ["chrome-devtools-mcp@latest"]
    }
  },
  "deploymentStructure": {
    "backoffice": {
      "workingDirectory": "apps/backoffice/",
      "vercelProject": "christianberneckers-projects/backoffice", 
      "domain": "backoffice.liveyourdreams.online",
      "deploymentURL": "https://backoffice-ybygqz5mx-christianberneckers-projects.vercel.app",
      "linkCommand": "cd apps/backoffice && vercel link --yes",
      "deployCommand": "cd apps/backoffice && vercel --prod",
      "notes": "KRITISCH: Immer aus apps/backoffice/ deployen! NICHT aus Root wegen Workspace-Konflikten!"
    },
    "designSystem": {
      "workingDirectory": "design-system/v2/",
      "vercelProject": "christianberneckers-projects/lyd-design-system",
      "domain": "designsystem.liveyourdreams.online", 
      "notes": "Separates Projekt für Design System"
    }
  },
  "commonIssues": {
    "yarnWorkspaceError": {
      "problem": "error Workspaces can only be enabled in private projects",
      "solution": "Deployment aus spezifischem app/* Directory, NICHT aus Root",
      "prevention": "Immer vercel link im richtigen Directory vor Deployment"
    },
    "adminPermissions": {
      "problem": "Redirect zu /dashboard?error=insufficient_permissions bei /admin Zugriff",
      "diagnosis": "RBAC-System funktioniert, aber User hat keine Admin-Permissions in Database",
      "solution": "Database-Seed prüfen oder User-Rollen manuell zuweisen"
    }
  },
  "cursorSettings": {
    "rulesFile": ".cursorrules",
    "autoLoadRules": true,
    "germanResponses": true,
    "reviewMode": "critical"
  }
}