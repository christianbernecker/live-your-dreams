{
  "name": "@liveyourdreams/design-system",
  "version": "1.0.0",
  "description": "Live Your Dreams Design System - Professional Web Components for Real Estate",
  "type": "module",
  "main": "dist/lyd-design-system.umd.js",
  "module": "dist/lyd-design-system.es.js",
  "exports": {
    ".": {
      "import": "./dist/lyd-design-system.es.js",
      "require": "./dist/lyd-design-system.umd.js"
    },
    "./components/*": "./src/components/*"
  },
  "scripts": {
    "dev": "vite --port 3001",
    "build": "vite build",
    "preview": "vite preview --port 3002",
    "ds:create": "node ../scripts/design-system-tools.js create-component",
    "ds:tokens": "node ../scripts/design-system-tools.js update-tokens", 
    "ds:commit": "node ../scripts/design-system-tools.js commit",
    "ds:deploy": "node ../scripts/design-system-tools.js deploy",
    "ds:workflow": "node ../scripts/design-system-tools.js full-workflow",
    "ds:help": "node ../scripts/design-system-tools.js"
  },
  "dependencies": {
    "lit": "^3.3.1"
  },
  "devDependencies": {
    "vite": "^5.4.19",
    "typescript": "^5.6.0"
  },
  "files": [
    "dist",
    "src",
    "assets"
  ],
  "keywords": [
    "design-system",
    "web-components",
    "real-estate",
    "nextjs",
    "lit"
  ]
}
