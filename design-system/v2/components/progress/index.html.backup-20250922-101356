                <div class="code-block">
                        <button class="lyd-button copy">Copy</button>
                        <pre>import { useState, useEffect } from 'react';

interface ProgressProps {
  value: number; // 0-100
  max?: number;
  variant?: 'default' | 'success' | 'warning' | 'error';
  label?: string;
  showPercentage?: boolean;
  animated?: boolean;
  className?: string;
}

export const LydProgress: React.FC&lt;ProgressProps&gt; = ({
  value,
  max = 100,
  variant = 'default',
  label,
  showPercentage = true,
  animated = true,
  className = ''
}) =&gt; {
  const [displayValue, setDisplayValue] = useState(0);

  useEffect(() =&gt; {
    if (animated) {
      // Animate progress bar
      const duration = 1000;
      const increment = value / (duration / 16);
      let current = 0;
      
      const timer = setInterval(() =&gt; {
        current += increment;
        if (current &gt;= value) {
          setDisplayValue(value);
          clearInterval(timer);
        } else {
          setDisplayValue(Math.round(current));
        }
      }, 16);
      
      return () =&gt; clearInterval(timer);
    } else {
      setDisplayValue(value);
    }
  }, [value, animated]);

  const percentage = Math.min(Math.max((displayValue / max) * 100, 0), 100);
  const progressClasses = [
    'lyd-progress',
    variant !== 'default' && variant,
    className
  ].filter(Boolean).join(' ');

  return (
    &lt;div className="lyd-progress-wrapper"&gt;
      {(label || showPercentage) && (
        &lt;div style={{
          display: 'flex',
          justifyContent: 'space-between',
          marginBottom: 'var(--spacing-sm)',
          fontSize: 'var(--font-size-sm)'
        }}&gt;
          {label && &lt;span style={{ fontWeight: 600 }}&gt;{label}&lt;/span&gt;}
          {showPercentage && (
            &lt;span style={{ color: 'var(--lyd-primary)' }}&gt;
              {Math.round(percentage)}%
            &lt;/span&gt;
          )}
        &lt;/div&gt;
      )}
      
      &lt;div className={progressClasses}&gt;
        &lt;div 
          className="lyd-progress-bar"
          style={{ width: `${percentage}%` }}
          role="progressbar"
          aria-valuenow={displayValue}
          aria-valuemin={0}
          aria-valuemax={max}
          aria-label={label}
        /&gt;
      &lt;/div&gt;
    &lt;/div&gt;
  );
};

// Advanced Progress with multiple steps
interface ProgressStepProps {
  steps: Array&lt;{
    label: string;
    completed: boolean;
    current?: boolean;
  }&gt;;
  className?: string;
}

export const LydProgressSteps: React.FC&lt;ProgressStepProps&gt; = ({
  steps,
  className = ''
}) =&gt; {
  const completedSteps = steps.filter(step =&gt; step.completed).length;
  const progress = (completedSteps / steps.length) * 100;

  return (
    &lt;div className={`lyd-progress-steps ${className}`}&gt;
      &lt;LydProgress 
        value={progress} 
        label="Property Listing Progress"
        showPercentage={true}
        animated={true}
      /&gt;
      
      &lt;div style={{ 
        display: 'flex', 
        justifyContent: 'space-between', 
        marginTop: 'var(--spacing-md)',
        fontSize: 'var(--font-size-sm)'
      }}&gt;
        {steps.map((step, index) =&gt; (
          &lt;div 
            key={index}
            style={{
              textAlign: 'center',
              color: step.completed 
                ? 'var(--lyd-success)' 
                : step.current 
                  ? 'var(--lyd-primary)' 
                  : 'var(--lyd-grey)'
            }}
          &gt;
            &lt;div style={{
              width: '20px',
              height: '20px',
              borderRadius: '50%',
              background: step.completed 
                ? 'var(--lyd-success)' 
                : step.current 
                  ? 'var(--lyd-primary)' 
                  : 'var(--lyd-gray-300)',
              margin: '0 auto 4px',
              display: 'flex',
              alignItems: 'center',
              justifyContent: 'center'
            }}&gt;
              {step.completed && (
                &lt;span style={{ color: 'white', fontSize: '12px' }}&gt;âœ“&lt;/span&gt;
              )}
            &lt;/div&gt;
            &lt;div style={{ fontWeight: step.current ? 600 : 400 }}&gt;
              {step.label}
            &lt;/div&gt;
          &lt;/div&gt;
        ))}
      &lt;/div&gt;
    &lt;/div&gt;
  );
};

// Usage Examples
export default function PropertyUpload() {
  const [uploadProgress, setUploadProgress] = useState(0);
  const [documentsProgress, setDocumentsProgress] = useState(45);

  const listingSteps = [
    { label: 'Basic Info', completed: true },
    { label: 'Photos', completed: true, current: true },
    { label: 'Description', completed: false },
    { label: 'Pricing', completed: false },
    { label: 'Review', completed: false }
  ];

  const simulateUpload = () =&gt; {
    setUploadProgress(0);
    const timer = setInterval(() =&gt; {
      setUploadProgress(prev =&gt; {
        if (prev &gt;= 100) {
          clearInterval(timer);
          return 100;
        }
        return prev + Math.random() * 10;
      });
    }, 200);
  };

  return (
    &lt;div className="property-upload"&gt;
      &lt;h3&gt;Document Upload&lt;/h3&gt;
      &lt;LydProgress 
        value={uploadProgress}
        label="Property Images"
        showPercentage={true}
        animated={true}
      /&gt;
      
      &lt;button onClick={simulateUpload}&gt;Start Upload&lt;/button&gt;

      &lt;h3&gt;Processing Status&lt;/h3&gt;
      &lt;LydProgress value={documentsProgress} variant="warning" label="Documents" /&gt;
      
      &lt;h3&gt;Listing Progress&lt;/h3&gt;
      &lt;LydProgressSteps steps={listingSteps} /&gt;
    &lt;/div&gt;
  );
}</pre>
                    </div>
                </div>
            </div>
        </section>
            </div>
        </section>
        
        <!-- Section 4: API Reference -->
        <section class="section">
            <h2 class="section-title">API Reference</h2>
            <div class="api-section">
