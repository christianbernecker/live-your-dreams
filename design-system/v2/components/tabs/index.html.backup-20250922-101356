            <div class="implementation-section">
                <h3>React/Next.js Integration</h3>
                <div style="padding: var(--spacing-lg);">
                    <div class="code-block">
                        <button class="lyd-button copy">Copy</button>
                        <pre>import React, { useState, useEffect } from 'react';

interface Tab {
  id: string;
  label: string;
  content: React.ReactNode;
  disabled?: boolean;
  icon?: React.ReactNode;
}

interface TabsProps {
  tabs: Tab[];
  defaultTab?: string;
  orientation?: 'horizontal' | 'vertical';
  variant?: 'default' | 'pills' | 'underline';
  size?: 'small' | 'medium' | 'large';
  className?: string;
  onChange?: (tabId: string) => void;
}

export const LydTabs: React.FC<TabsProps> = ({
  tabs,
  defaultTab,
  orientation = 'horizontal',
  variant = 'default',
  size = 'medium',
  className = '',
  onChange,
  ...props
}) => {
  const [activeTab, setActiveTab] = useState(
    defaultTab || tabs[0]?.id || ''
  );

  useEffect(() => {
    if (defaultTab && defaultTab !== activeTab) {
      setActiveTab(defaultTab);
    }
  }, [defaultTab]);

  const handleTabClick = (tabId: string) => {
    if (tabs.find(tab => tab.id === tabId)?.disabled) return;
    
    setActiveTab(tabId);
    onChange?.(tabId);
  };

  const handleKeyDown = (event: React.KeyboardEvent, tabId: string) => {
    if (event.key === 'Enter' || event.key === ' ') {
      event.preventDefault();
      handleTabClick(tabId);
    }
    
    // Arrow key navigation
    if (event.key === 'ArrowRight' || event.key === 'ArrowDown') {
      event.preventDefault();
      const currentIndex = tabs.findIndex(tab => tab.id === tabId);
      const nextIndex = (currentIndex + 1) % tabs.length;
      handleTabClick(tabs[nextIndex].id);
    }
    
    if (event.key === 'ArrowLeft' || event.key === 'ArrowUp') {
      event.preventDefault();
      const currentIndex = tabs.findIndex(tab => tab.id === tabId);
      const prevIndex = currentIndex === 0 ? tabs.length - 1 : currentIndex - 1;
      handleTabClick(tabs[prevIndex].id);
    }
  };

  return (
    &lt;div 
      className={`lyd-tabs ${orientation} ${variant} ${size} ${className}`}
      {...props}
    &gt;
      {/* Tab List */}
      &lt;div className="lyd-tabs-list" role="tablist"&gt;
        {tabs.map((tab) => (
          &lt;button
            key={tab.id}
            className={`lyd-tabs-trigger ${
              activeTab === tab.id ? 'active' : ''
            } ${tab.disabled ? 'disabled' : ''}`}
            onClick={() => handleTabClick(tab.id)}
            onKeyDown={(e) => handleKeyDown(e, tab.id)}
            role="tab"
            aria-selected={activeTab === tab.id}
            aria-controls={`panel-${tab.id}`}
            tabIndex={activeTab === tab.id ? 0 : -1}
            disabled={tab.disabled}
          &gt;
            {tab.icon && &lt;span className="tab-icon"&gt;{tab.icon}&lt;/span&gt;}
            {tab.label}
          &lt;/button&gt;
        ))}
      &lt;/div&gt;

      {/* Tab Content */}
      &lt;div className="lyd-tabs-content-container"&gt;
        {tabs.map((tab) => (
          &lt;div
            key={tab.id}
            id={`panel-${tab.id}`}
            className={`lyd-tabs-content ${
              activeTab === tab.id ? 'active' : ''
            }`}
            role="tabpanel"
            aria-labelledby={tab.id}
            hidden={activeTab !== tab.id}
          &gt;
            {tab.content}
          &lt;/div&gt;
        ))}
      &lt;/div&gt;
    &lt;/div&gt;
  );
};

