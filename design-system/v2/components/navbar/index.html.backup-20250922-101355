            <div class="implementation-section">
                <h3>React/Next.js Integration</h3>
                <div class="code-block">
                        <button class="lyd-button copy">Copy</button>
                        <pre>import React, { useState, useEffect } from 'react';
import Link from 'next/link';
import { useRouter } from 'next/router';

interface NavbarProps {
  brand?: string;
  logo?: React.ReactNode;
  user?: {
    name: string;
    avatar?: string;
  };
  links: Array<{
    href: string;
    label: string;
    active?: boolean;
  }>;
  className?: string;
}

export const LydNavbar: React.FC<NavbarProps> = ({
  brand = "Live Your Dreams",
  logo,
  user,
  links,
  className = '',
  ...props
}) => {
  const [isMenuOpen, setIsMenuOpen] = useState(false);
  const router = useRouter();

  // Close mobile menu on route change
  useEffect(() => {
    const handleRouteChange = () => setIsMenuOpen(false);
    router.events.on('routeChangeStart', handleRouteChange);
    return () => router.events.off('routeChangeStart', handleRouteChange);
  }, [router]);

  const toggleMenu = () => setIsMenuOpen(!isMenuOpen);

  return (
    &lt;nav className={`lyd-navbar ${className}`} {...props}&gt;
      &lt;div className="lyd-navbar-container"&gt;
        {/* Brand */}
        &lt;Link href="/" className="lyd-navbar-brand"&gt;
          {logo}
          {brand}
        &lt;/Link&gt;

        {/* Desktop Navigation */}
        &lt;div className="lyd-navbar-nav desktop"&gt;
          {links.map((link, index) => (
            &lt;Link
              key={index}
              href={link.href}
              className={`lyd-navbar-link ${
                router.pathname === link.href ? 'active' : ''
              }`}
            &gt;
              {link.label}
            &lt;/Link&gt;
          ))}
        &lt;/div&gt;

        {/* User Section */}
        {user && (
          &lt;div className="lyd-navbar-user"&gt;
            &lt;div className="lyd-navbar-avatar"&gt;
              {user.avatar ? (
                &lt;img src={user.avatar} alt={user.name} /&gt;
              ) : (
                user.name.charAt(0).toUpperCase()
              )}
            &lt;/div&gt;
            &lt;span className="lyd-navbar-username"&gt;{user.name}&lt;/span&gt;
          &lt;/div&gt;
        )}

        {/* Mobile Menu Button */}
        &lt;button
          className="lyd-navbar-toggle"
          onClick={toggleMenu}
          aria-label="Toggle navigation"
        &gt;
          ☰
        &lt;/button&gt;
      &lt;/div&gt;

      {/* Mobile Navigation */}
      {isMenuOpen && (
        &lt;div className="lyd-navbar-mobile"&gt;
          {links.map((link, index) => (
            &lt;Link
              key={index}
              href={link.href}
              className={`lyd-navbar-link mobile ${
                router.pathname === link.href ? 'active' : ''
              }`}
            &gt;
              {link.label}
            &lt;/Link&gt;
          ))}
        &lt;/div&gt;
      )}
    &lt;/nav&gt;
  );
};

// Usage Example
const MyNavbar = () => {
  const navLinks = [
    { href: '/properties', label: 'Properties' },
    { href: '/agents', label: 'Agents' },
    { href: '/about', label: 'About' },
    { href: '/contact', label: 'Contact' }
  ];

  const currentUser = {
    name: 'John Doe',
    avatar: '/avatars/johndoe.jpg'
  };

  return (
    &lt;LydNavbar
      links={navLinks}
      user={currentUser}
      logo={&lt;img src="/logo.svg" alt="LYD Logo" /&gt;}
    /&gt;
  );
};</pre>
                    </div>
                </div>
            </div>
        </section>
            </div>
        </section>
        
        <!-- Section 4: API Reference -->
        <section class="section">
