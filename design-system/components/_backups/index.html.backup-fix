    <style>
        :root {
            /* LYD Design Tokens */
            --lyd-primary: #0066ff;
            --lyd-primary-hover: #0052cc;
            --lyd-primary-active: #003d99;
            --lyd-secondary: #6366f1;
            --lyd-secondary-hover: #4f46e5;
            --lyd-accent-light: #eff6ff;
            --lyd-success: #10b981;
            --lyd-warning: #f59e0b;
            --lyd-error: #ef4444;
            --lyd-white: #ffffff;
            --lyd-gray-50: #f9fafb;
            --lyd-gray-100: #f3f4f6;
            --lyd-gray-200: #e5e7eb;
            --lyd-gray-300: #d1d5db;
            --lyd-gray-400: #9ca3af;
            --lyd-gray-500: #6b7280;
            --lyd-gray-600: #4b5563;
            --lyd-gray-700: #374151;
            --lyd-gray-800: #1f2937;
            --lyd-gray-900: #111827;
            
            /* Typography */
            --font-family: 'Inter', system-ui, -apple-system, sans-serif;
            --font-size-xs: 12px;
            --font-size-sm: 14px;
            --font-size-base: 16px;
            --font-size-lg: 18px;
            --font-size-xl: 20px;
            --font-size-2xl: 24px;
            --font-size-3xl: 30px;
            --font-size-4xl: 36px;
            --font-size-5xl: 48px;
            
            /* Spacing */
            --spacing-xs: 4px;
            --spacing-sm: 8px;
            --spacing-md: 16px;
            --spacing-lg: 24px;
            --spacing-xl: 32px;
            --spacing-2xl: 48px;
            
            /* Border radius */
            --radius-sm: 4px;
            --radius-md: 8px;
            --radius-lg: 12px;
            --radius-xl: 16px;
            
            /* Shadows */
            --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.05);
            --shadow-md: 0 4px 6px rgba(0, 0, 0, 0.07);
            --shadow-lg: 0 10px 15px rgba(0, 0, 0, 0.1);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: var(--font-family);
            background: linear-gradient(135deg, var(--lyd-gray-50) 0%, var(--lyd-gray-100) 100%);
            color: var(--lyd-gray-900);
            display: flex;
            min-height: 100vh;
        }

        /* Global Sidebar */
        .lyd-sidebar {
            width: 280px;
            background: var(--lyd-white);
            border-right: 1px solid var(--lyd-gray-200);
            position: fixed;
            height: 100vh;
            overflow-y: auto;
            z-index: 1000;
            box-shadow: var(--shadow-sm);
        }

        .lyd-sidebar-header {
            padding: var(--spacing-xl) var(--spacing-lg);
            border-bottom: 1px solid var(--lyd-gray-200);
        }

        .lyd-logo {
            width: 100%;
            height: auto;
            max-height: 180px;
        }

        .lyd-nav-section {
            margin-bottom: var(--spacing-xl);
        }

        .lyd-nav-section-title {
            padding: var(--spacing-md) var(--spacing-lg) var(--spacing-sm);
            font-size: var(--font-size-xs);
            font-weight: 600;
            color: var(--lyd-gray-500);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .lyd-nav-item {
            display: block;
            padding: 12px var(--spacing-lg);
            color: var(--lyd-gray-700);
            text-decoration: none;
            font-size: 15px;
            font-weight: 500;
            transition: all 0.2s ease;
            border-left: 3px solid transparent;
        }

        .lyd-nav-item:hover {
            background: var(--lyd-gray-50);
            color: var(--lyd-primary);
            border-left-color: var(--lyd-primary);
        }

        .lyd-nav-item.active {
            background: var(--lyd-accent-light);
            color: var(--lyd-primary);
            border-left-color: var(--lyd-primary);
        }

        /* Main Content */
        .lyd-main-content {
            margin-left: 280px;
            flex: 1;
            min-height: 100vh;
            padding: var(--spacing-2xl);
        }

        .lyd-page-header {
            margin-bottom: var(--spacing-2xl);
        }

        .lyd-page-title {
            font-size: var(--font-size-5xl);
            font-weight: 800;
            color: var(--lyd-gray-900);
            margin-bottom: var(--spacing-md);
            line-height: 1.1;
        }

        .lyd-page-subtitle {
            font-size: var(--font-size-xl);
            color: var(--lyd-gray-600);
            line-height: 1.6;
            max-width: 600px;
        }

        /* Content Sections */
        .lyd-section {
            margin-bottom: var(--spacing-2xl);
        }

        .lyd-section-title {
            font-size: var(--font-size-3xl);
            font-weight: 700;
            color: var(--lyd-gray-900);
            margin-bottom: var(--spacing-lg);
        }

        .lyd-section-subtitle {
            font-size: var(--font-size-lg);
            color: var(--lyd-gray-600);
            margin-bottom: var(--spacing-xl);
        }

        /* Component Grid */
        .lyd-component-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
            gap: var(--spacing-xl);
            margin: var(--spacing-xl) 0;
        }

        .lyd-component-card {
            background: var(--lyd-white);
            padding: var(--spacing-xl);
            border-radius: var(--radius-xl);
            border: 1px solid var(--lyd-gray-200);
            box-shadow: var(--shadow-sm);
            transition: all 0.2s ease;
        }

        .lyd-component-card:hover {
            box-shadow: var(--shadow-md);
            transform: translateY(-2px);
        }

        .lyd-component-card h3 {
            font-size: var(--font-size-xl);
            font-weight: 600;
            color: var(--lyd-gray-900);
            margin-bottom: var(--spacing-sm);
        }

        .lyd-component-card p {
            font-size: var(--font-size-sm);
            color: var(--lyd-gray-600);
            margin-bottom: var(--spacing-lg);
            line-height: 1.5;
        }

        .lyd-component-showcase {
            display: flex;
            flex-wrap: wrap;
            gap: var(--spacing-md);
            align-items: center;
            margin-top: var(--spacing-lg);
        }

        /* Responsive */
        @media (max-width: 1024px) {
            .lyd-sidebar {
                transform: translateX(-100%);
            }
            
            .lyd-main-content {
                margin-left: 0;
                padding: var(--spacing-lg);
            }
        }

        /* Input specific styles */
        .input-showcase {
            display: flex;
            flex-direction: column;
            gap: 16px;
            margin-top: 16px;
        }
        
        .form-example {
            background: white;
            padding: 24px;
            border-radius: 12px;
            border: 1px solid #e5e7eb;
            margin-top: 24px;
        }
        
        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 16px;
            margin-bottom: 16px;
        }
        
        .form-row.full {
            grid-template-columns: 1fr;
        }
        
        @media (max-width: 768px) {
            .form-row {
                grid-template-columns: 1fr;
            }
        }
        
        /* Basic input styling for demo */
        .demo-input {
            width: 100%;
            padding: 12px 16px;
            border: 2px solid var(--lyd-gray-200);
            border-radius: var(--radius-md);
            font-size: var(--font-size-base);
            transition: all 0.2s ease;
        }
        
        .demo-input:focus {
            outline: none;
            border-color: var(--lyd-primary);
            box-shadow: 0 0 0 3px rgba(0, 102, 255, 0.1);
        }
        
        .demo-input.error {
            border-color: var(--lyd-error);
        }
        
        .input-label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
            color: var(--lyd-gray-700);
        }
        
        .input-error {
            color: var(--lyd-error);
            font-size: var(--font-size-sm);
            margin-top: 4px;
        }
    </style>
    
