            <a href="../../styles/spacing/" class="lyd-nav-item">Spacing</a>
        </div>
    </nav>
    
    <!-- Main Content Area -->
    <main class="lyd-main-content">
        <div class="lyd-page-header">
            <h1 class="lyd-page-title">Modal Components</h1>
            <p class="lyd-page-subtitle">Modal dialogs for property details, confirmations, forms, and user interactions.</p>
        </div>
        
        <section class="lyd-section">
            <h2 class="lyd-section-title">Modal Variants</h2>
            
            <div class="lyd-component-grid">
                <div class="lyd-component-card">
                    <h3>Basic Modal</h3>
                    <p>Standard modal for general content and confirmations</p>
                    <button class="demo-button primary" onclick="openModal('basic-modal')">
                        Open Basic Modal
                    </button>
                </div>
                
                <div class="lyd-component-card">
                    <h3>Property Details Modal</h3>
                    <p>Specialized modal for property information and images</p>
                    <button class="demo-button primary" onclick="openModal('property-modal')">
                        View Property Details
                    </button>
                </div>
                
                <div class="lyd-component-card">
                    <h3>Contact Form Modal</h3>
                    <p>Modal with contact form for lead generation</p>
                    <button class="demo-button primary" onclick="openModal('contact-modal')">
                        Schedule Viewing
                    </button>
                </div>
                
                <div class="lyd-component-card">
                    <h3>Confirmation Modal</h3>
                    <p>Modal for important confirmations and alerts</p>
                    <button class="demo-button outline" onclick="openModal('confirm-modal')">
                        Delete Property
                    </button>
                </div>
            </div>
        </section>
        
        <section class="lyd-section">
            <h2 class="lyd-section-title">Next.js Integration</h2>
            
            <pre style="background: #f3f4f6; padding: 16px; border-radius: 8px; overflow-x: auto; font-family: 'JetBrains Mono', monospace; font-size: 14px;"><code>// components/PropertyModal.tsx
'use client';

import { useState } from 'react';

interface PropertyModalProps {
  property: {
    id: string;
    title: string;
    price: number;
    images: string[];
    description: string;
  };
  isOpen: boolean;
  onClose: () => void;
}

export default function PropertyModal({ property, isOpen, onClose }: PropertyModalProps) {
  if (!isOpen) return null;

  return (
    &lt;div className="modal-overlay active" onClick={onClose}&gt;
      &lt;div className="modal-content" onClick={(e) => e.stopPropagation()}&gt;
        &lt;div className="modal-header"&gt;
          &lt;h2 className="modal-title"&gt;{property.title}&lt;/h2&gt;
          &lt;button className="modal-close" onClick={onClose}&gt;×&lt;/button&gt;
        &lt;/div&gt;
        
        &lt;div className="modal-body"&gt;
          &lt;div className="property-images"&gt;
            {property.images.map((image, index) => (
              &lt;img key={index} src={image} alt={`${property.title} ${index + 1}`} /&gt;
            ))}
          &lt;/div&gt;
          
          &lt;div className="property-info"&gt;
            &lt;p className="property-price"&gt;€{property.price.toLocaleString()}&lt;/p&gt;
            &lt;p className="property-description"&gt;{property.description}&lt;/p&gt;
          &lt;/div&gt;
        &lt;/div&gt;
        
        &lt;div className="modal-footer"&gt;
          &lt;button className="demo-button secondary" onClick={onClose}&gt;
            Close
          &lt;/button&gt;
          &lt;button className="demo-button primary"&gt;
            Schedule Viewing
          &lt;/button&gt;
        &lt;/div&gt;
      &lt;/div&gt;
    &lt;/div&gt;
  );
}</code></pre>
        </section>
    </main>
    
    <!-- Modal Examples -->
    
    <!-- Basic Modal -->
    <div id="basic-modal" class="modal-overlay">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Welcome to LYD Design System</h2>
                <button class="modal-close" onclick="closeModal('basic-modal')">×</button>
            </div>
            <div class="modal-body">
                <p>This is a basic modal example. It can contain any type of content including text, images, forms, or other components.</p>
                <p>The modal is fully accessible and supports keyboard navigation.</p>
            </div>
            <div class="modal-footer">
                <button class="demo-button secondary" onclick="closeModal('basic-modal')">Close</button>
                <button class="demo-button primary">Got it</button>
            </div>
        </div>
    </div>
    
    <!-- Property Modal -->
    <div id="property-modal" class="modal-overlay">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Luxury Villa Munich</h2>
                <button class="modal-close" onclick="closeModal('property-modal')">×</button>
            </div>
            <div class="modal-body">
                <div style="width: 100%; height: 250px; background: linear-gradient(45deg, #ddd6fe, #c4b5fd); border-radius: 8px; margin-bottom: 20px; display: flex; align-items: center; justify-content: center; color: var(--lyd-gray-600);">
                    Property Image Gallery
                </div>
                <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 16px;">
                    <h3>Luxury Villa Munich</h3>
                    <span style="font-size: 24px; font-weight: 600; color: var(--lyd-primary);">€2,500,000</span>
                </div>
                <p style="color: var(--lyd-gray-600); margin-bottom: 20px;">Stunning 5-bedroom villa with private garden, swimming pool, and panoramic views. Located in Munich's most prestigious neighborhood with excellent transport links.</p>
                <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 16px; margin-bottom: 20px;">
                    <div style="text-align: center; padding: 12px; background: var(--lyd-gray-50); border-radius: 8px;">
                        <div style="font-weight: 600; color: var(--lyd-primary);">5</div>
                        <div style="font-size: 12px; color: var(--lyd-gray-600);">Bedrooms</div>
                    </div>
                    <div style="text-align: center; padding: 12px; background: var(--lyd-gray-50); border-radius: 8px;">
                        <div style="font-weight: 600; color: var(--lyd-primary);">3</div>
                        <div style="font-size: 12px; color: var(--lyd-gray-600);">Bathrooms</div>
                    </div>
                    <div style="text-align: center; padding: 12px; background: var(--lyd-gray-50); border-radius: 8px;">
                        <div style="font-weight: 600; color: var(--lyd-primary);">350m²</div>
                        <div style="font-size: 12px; color: var(--lyd-gray-600);">Living Area</div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="demo-button secondary" onclick="closeModal('property-modal')">Close</button>
                <button class="demo-button outline">Add to Favorites</button>
                <button class="demo-button primary">Schedule Viewing</button>
            </div>
        </div>
    </div>
    
    <!-- Contact Modal -->
    <div id="contact-modal" class="modal-overlay">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Schedule Property Viewing</h2>
                <button class="modal-close" onclick="closeModal('contact-modal')">×</button>
            </div>
            <div class="modal-body">
                <form style="display: flex; flex-direction: column; gap: 16px;">
                    <div>
                        <label style="display: block; margin-bottom: 8px; font-weight: 500;">Full Name</label>
                        <input type="text" style="width: 100%; padding: 12px; border: 2px solid var(--lyd-gray-200); border-radius: var(--radius-md);" placeholder="Enter your name">
                    </div>
                    <div>
                        <label style="display: block; margin-bottom: 8px; font-weight: 500;">Email</label>
                        <input type="email" style="width: 100%; padding: 12px; border: 2px solid var(--lyd-gray-200); border-radius: var(--radius-md);" placeholder="your@email.com">
                    </div>
                    <div>
                        <label style="display: block; margin-bottom: 8px; font-weight: 500;">Phone</label>
                        <input type="tel" style="width: 100%; padding: 12px; border: 2px solid var(--lyd-gray-200); border-radius: var(--radius-md);" placeholder="+49 123 456 789">
                    </div>
                    <div>
                        <label style="display: block; margin-bottom: 8px; font-weight: 500;">Preferred Date</label>
                        <input type="date" style="width: 100%; padding: 12px; border: 2px solid var(--lyd-gray-200); border-radius: var(--radius-md);">
                    </div>
                    <div>
                        <label style="display: block; margin-bottom: 8px; font-weight: 500;">Message</label>
                        <textarea style="width: 100%; padding: 12px; border: 2px solid var(--lyd-gray-200); border-radius: var(--radius-md); min-height: 80px;" placeholder="Additional information..."></textarea>
                    </div>
                </form>
