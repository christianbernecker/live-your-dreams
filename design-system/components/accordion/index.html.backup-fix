    <style>
        :root {
            --lyd-primary: #0066ff;
            --lyd-primary-hover: #0052cc;
            --lyd-secondary: #6366f1;
            --lyd-accent-light: #eff6ff;
            --lyd-success: #10b981;
            --lyd-warning: #f59e0b;
            --lyd-error: #ef4444;
            --lyd-white: #ffffff;
            --lyd-gray-50: #f9fafb;
            --lyd-gray-100: #f3f4f6;
            --lyd-gray-200: #e5e7eb;
            --lyd-gray-300: #d1d5db;
            --lyd-gray-400: #9ca3af;
            --lyd-gray-500: #6b7280;
            --lyd-gray-600: #4b5563;
            --lyd-gray-700: #374151;
            --lyd-gray-800: #1f2937;
            --lyd-gray-900: #111827;
