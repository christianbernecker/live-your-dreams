            --spacing-sm: 8px;
            --spacing-md: 16px;
            --spacing-lg: 24px;
            --spacing-xl: 32px;
            --spacing-2xl: 48px;
            --radius-md: 8px;
            --radius-lg: 12px;
            --radius-xl: 16px;
            --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.05);
            --shadow-md: 0 4px 6px rgba(0, 0, 0, 0.07);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: var(--font-family);
            background: linear-gradient(135deg, var(--lyd-gray-50) 0%, var(--lyd-gray-100) 100%);
            color: var(--lyd-gray-900);
            display: flex;
            min-height: 100vh;
        }

        .lyd-sidebar {
            width: 280px;
            background: var(--lyd-white);
            border-right: 1px solid var(--lyd-gray-200);
            position: fixed;
            height: 100vh;
            overflow-y: auto;
            z-index: 1000;
            box-shadow: var(--shadow-sm);
        }

        .lyd-sidebar-header {
            padding: var(--spacing-xl) var(--spacing-lg);
            border-bottom: 1px solid var(--lyd-gray-200);
        }

        .lyd-logo {
            width: 100%;
            height: auto;
            max-height: 180px;
        }

        .lyd-nav-section {
            margin-bottom: var(--spacing-xl);
        }

        .lyd-nav-section-title {
            padding: var(--spacing-md) var(--spacing-lg) var(--spacing-sm);
            font-size: 12px;
            font-weight: 600;
            color: var(--lyd-gray-500);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .lyd-nav-item {
