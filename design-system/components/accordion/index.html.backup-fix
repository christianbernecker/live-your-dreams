            padding: 12px var(--spacing-lg);
            color: var(--lyd-gray-700);
            text-decoration: none;
            font-size: 15px;
            font-weight: 500;
            transition: all 0.2s ease;
            border-left: 3px solid transparent;
        }

        .lyd-nav-item:hover {
            background: var(--lyd-gray-50);
            color: var(--lyd-primary);
            border-left-color: var(--lyd-primary);
        }

        .lyd-nav-item.active {
            background: var(--lyd-accent-light);
            color: var(--lyd-primary);
            border-left-color: var(--lyd-primary);
        }

        .lyd-main-content {
            margin-left: 280px;
            flex: 1;
            min-height: 100vh;
            padding: var(--spacing-2xl);
        }

        .lyd-page-header {
            margin-bottom: var(--spacing-2xl);
        }

        .lyd-page-title {
            font-size: 48px;
            font-weight: 800;
            color: var(--lyd-gray-900);
            margin-bottom: var(--spacing-md);
            line-height: 1.1;
        }

        .lyd-page-subtitle {
            font-size: 20px;
            color: var(--lyd-gray-600);
            line-height: 1.6;
            max-width: 600px;
        }

        .lyd-section {
            margin-bottom: var(--spacing-2xl);
        }

        .lyd-section-title {
            font-size: 30px;
            font-weight: 700;
            color: var(--lyd-gray-900);
            margin-bottom: var(--spacing-lg);
        }

        .lyd-component-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
            gap: var(--spacing-xl);
            margin: var(--spacing-xl) 0;
        }

        .lyd-component-card {
            background: var(--lyd-white);
            padding: var(--spacing-xl);
            border-radius: var(--radius-xl);
            border: 1px solid var(--lyd-gray-200);
            box-shadow: var(--shadow-sm);
