        }

        .accordion-header {
            width: 100%;
            padding: 20px;
            background: none;
            border: none;
            text-align: left;
            font-size: 16px;
            font-weight: 500;
            color: var(--lyd-gray-900);
            cursor: pointer;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: all 0.2s ease;
