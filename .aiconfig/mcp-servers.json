{
  "mcpServers": {
    "github": {
      "command": "node",
      "args": ["./tooling/mcp/github/index.mjs"],
      "env": {
        "GITHUB_TOKEN": "${env.GITHUB_TOKEN}",
        "GITHUB_REPOSITORY": "christianbernecker/live-your-dreams"
      },
      "description": "GitHub API operations (issues, PRs, commits)"
    },
    "neon": {
      "command": "node",
      "args": ["./tooling/mcp/neon/index.mjs"],
      "env": {
        "NEON_API_KEY": "${env.NEON_API_KEY}",
        "NEON_PROJECT_ID": "${env.NEON_PROJECT_ID}",
        "NEON_DATABASE_NAME": "${env.NEON_DATABASE_NAME}",
        "NEON_DEFAULT_ROLE": "${env.NEON_DEFAULT_ROLE}",
        "NEON_DEFAULT_USER": "${env.NEON_DEFAULT_USER}",
        "NEON_DEFAULT_PASSWORD": "${env.NEON_DEFAULT_PASSWORD}"
      },
      "description": "Neon PostgreSQL database queries and management"
    },
    "ds-linter": {
      "command": "node",
      "args": ["./tooling/mcp/ds-linter/index.mjs"],
      "description": "Design System compliance checker"
    },
    "docs": {
      "command": "node",
      "args": ["./tooling/mcp/docs/index.mjs"],
      "description": "Documentation management and updates"
    },
    "chrome-devtools": {
      "command": "npx",
      "args": ["chrome-devtools-mcp@latest"],
      "description": "Chrome DevTools integration for debugging"
    },
    "vercel": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-vercel"],
      "env": {
        "VERCEL_ACCESS_TOKEN": "${env.VERCEL_ACCESS_TOKEN}"
      },
      "description": "Vercel deployments, logs, env vars, preview URLs"
    },
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "${workspaceFolder}"],
      "description": "Enhanced file operations, batch processing, safe refactoring"
    },
    "prisma": {
      "command": "node",
      "args": ["./tooling/mcp/prisma/index.mjs"],
      "env": {
        "DATABASE_URL": "${env.DATABASE_URL}"
      },
      "description": "Prisma schema management, migrations, database operations"
    }
  }
}

