{
  "name": "@liveyourdreams/design-tokens",
  "version": "2.0.0",
  "description": "Live Your Dreams Design Tokens - Complete System",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:tokens && npm run build:css && npm run build:js",
    "build:tokens": "style-dictionary build",
    "build:css": "node scripts/build-css.js",
    "build:js": "node scripts/build-js.js",
    "clean": "rm -rf dist",
    "dev": "npm run build && npm run build -- --watch",
    "test": "vitest",
    "lint": "eslint src/**/*.ts"
  },
  "dependencies": {
    "style-dictionary": "^3.9.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
