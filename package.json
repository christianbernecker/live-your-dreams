{
  "name": "@liveyourdreams/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Live Your Dreams - Immobilienvermarktung Monorepo",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "bootstrap": "pnpm install && pnpm build:libs && pnpm build:apps",
    "check:brand": "bash ./scripts/check-lyd-brand.sh",
    "build:tokens": "pnpm --filter @liveyourdreams/design-tokens build",
    "build:ds": "pnpm --filter @liveyourdreams/design-system build", 
    "build:react": "pnpm --filter @liveyourdreams/design-system-react build",
    "build:libs": "pnpm build:tokens && pnpm build:ds && pnpm build:react",
    "build:apps": "pnpm --filter @liveyourdreams/backoffice build && pnpm --filter @liveyourdreams/designsystem-docs build",
    "build": "pnpm build:libs && pnpm build:apps",
    "dev": "pnpm -r --parallel dev",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "clean": "pnpm -r clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "typescript": "^5.3.3"
  }
}
